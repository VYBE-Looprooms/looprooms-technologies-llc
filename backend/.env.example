# Environment Configuration
NODE_ENV=development
PORT=3001

# Gmail SMTP Configuration
# Get app password from Google Account Settings > 2-Step Verification > App passwords
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password

# N8N Webhook Configuration
# URL to your n8n webhook for waitlist submissions
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook-test/vybe-waitlist

# CORS Configuration
# Frontend URL for CORS policy
FRONTEND_URL=http://localhost:8080
# Backend IP for additional CORS origins
BACKEND_IP=localhost
# Optional: Additional allowed origins (comma-separated)
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting Configuration
# Time window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window per IP
RATE_LIMIT_MAX_REQUESTS=200

# Email Template Configuration
COMPANY_NAME="VYBE LOOPROOMS"
COMPANY_WEBSITE=https://feelyourvybe.com
SUPPORT_EMAIL=info@feelyourvybe.com

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=vybe
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_SSL=false
DB_LOGGING=false

# Optional: single DATABASE_URL if preferred over discrete vars
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# JWT Authentication Configuration
# Use a strong, random secret key in production
JWT_SECRET=your-super-secure-jwt-secret-key
# Token expiration time (e.g., 7d, 24h, 60m)
JWT_EXPIRES_IN=7d
# Password hashing rounds (10-12 recommended)
BCRYPT_ROUNDS=12
