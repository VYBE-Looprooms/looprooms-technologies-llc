# VYBE LOOPROOMSâ„¢ Backend Environment Variables

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/vybe_development?schema=public"
POSTGRES_USER=vybe_user
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=vybe_development

# Server Configuration
NODE_ENV=development
PORT=3001
BACKEND_IP=192.168.3.10
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Authentication & Security
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# Email Configuration (Gmail)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,video/mp4,audio/mpeg

# Cloud Storage (future)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=vybe-looprooms-media

# Stripe Configuration (future)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Redis Configuration (future)
REDIS_URL=redis://localhost:6379

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
